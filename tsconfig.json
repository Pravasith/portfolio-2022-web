{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,

        // Shorten import paths
        "baseUrl": "./src",
        "paths": {
            "@components/*": ["components/*"],
            "@pages/*": ["pages/*"],
            "@styles/*": ["styles/*"],
            "@hooks/*": ["utils/hooks/*"],
            "@lib/*": ["lib/*"],
            "@ui/*": ["components/UI/*"],
            "@svgs/*": ["components/SVGs/*"],
            "@models/*": ["components/Models/*"],
            "@utils/*": ["utils/*"],
            "@services/*": ["services/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "src/lib/themes/colors"
    ],
    "exclude": ["node_modules"]
}
